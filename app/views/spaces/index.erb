<h1>Spaces</h1>

<ul>
  <% @spaces.each do |space| %>
    <li>
      <strong>
        <%= space.title %>
      </strong>
      <em>
        <%= space.description%>
      </em>
      Â£<%= space.price %>
      <% imex = space.photos.last %>
      <img style="width: 200px; vertical-align: top" src='<%= imex.image %>' />
      <%if space.available?%>
        <button class="book-button" id="<%=space.id%>" type="button">Book</button>
        <span id="span-<%=space.id%>">
        </span>
      <%else%>
        Unavailable
      <%end%>
    </li>
  <% end %>
</ul>
